<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="707">
    <Grid >
        <TabControl>
            <TabItem Header="Агентство">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"></ColumnDefinition>
                        <ColumnDefinition Width="220"></ColumnDefinition>
                    </Grid.ColumnDefinitions>


                    <ListView x:Name="listView1" Margin="20,50,130,94" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding FirstName}" Width="90"/>
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding MiddleName}" Width="100"/>
                                <GridViewColumn Header="Отечество" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                                <GridViewColumn Header="Сделки" DisplayMemberBinding="{Binding DealShare }" Width="110"/>

                            </GridView>
                        </ListView.View>
                        
                    </ListView>
                   

                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10,50,10,0" HorizontalAlignment="Right">
                        <Button x:Name="btnAddAgent" Content="Создать" Width="100" Height="30" Margin="0,5" Click="btnAddAgent_Click"/>
                        <Button x:Name="btnEditAgent" Content="Редактировать" Width="100" Height="30" Margin="0,5" Click="btnEditAgent_Click"/>
                        <Button x:Name="btnDeleteAgent" Content="Удалить" Width="100" Height="30" Margin="0,5" Click="btnDeleteAgent_Click"/>
                    </StackPanel>
                </Grid>
                
            </TabItem>

            <TabItem Header="Клиенты">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"></ColumnDefinition>
                        <ColumnDefinition Width="220"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <ListView x:Name="listView2" Margin="20,50,130,94" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding FirstName}" Width="90"/>
                            <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding MiddleName}" Width="100"/>
                            <GridViewColumn Header="Отечество" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                            <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="110"/>
                            <GridViewColumn Header="Почта" DisplayMemberBinding="{Binding Email}" Width="110"/>

                        </GridView>
                    </ListView.View>
                    </ListView>
                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10,50,10,0" HorizontalAlignment="Right">
                        <Button x:Name="btnAddClient" Content="Создать" Width="100" Height="30" Margin="0,5" Click="btnAddClient_Click"/>
                        <Button x:Name="btnEditClient" Content="Редактировать" Width="100" Height="30" Margin="0,5" Click="btnEditClient_Click"/>
                        <Button x:Name="btnDeleteClient" Content="Удалить" Width="100" Height="30" Margin="0,5" Click="btnDeleteClient_Click"/>
                    </StackPanel>
                </Grid>
                </TabItem>
        </TabControl>
    </Grid>
</Window>
