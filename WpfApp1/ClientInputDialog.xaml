<Window x:Class="WpfApp1.ClientInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
          Title="Клиент" Height="380" Width="350" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия " Grid.Row="0" Margin="0,5,0,2" />
        <TextBox x:Name="tbLastName" Grid.Row="1" Margin="0,2" Height="25"/>

        <TextBlock Text="Имя " Grid.Row="2" Margin="0,10,0,2"/>
        <TextBox x:Name="tbFirstName" Grid.Row="3" Margin="0,2" Height="25"/>

        <TextBlock Text="Отчество" Grid.Row="4" Margin="0,10,0,2"/>
        <TextBox x:Name="tbMiddleName" Grid.Row="5" Margin="0,2" Height="25"/>

        <TextBlock Text="Телефон" Grid.Row="6" Margin="0,10,0,2"/>
        <TextBox x:Name="tbPhone" Grid.Row="7" Margin="0,2" Height="25"/>

        <TextBlock Text="Почта" Grid.Row="8" Margin="0,10,0,2"/>
        <TextBox x:Name="tbEmail" Grid.Row="9" Margin="0,2" Height="25"/>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Отмена" Width="80" Height="30" Margin="0,0,10,0" 
                    IsCancel="True" Click="btnCancel_Click"/>
            <Button Content="Сохранить" Width="80" Height="30" 
                    IsDefault="True" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>